<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('front-style') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('front-scripts') }}
        {% endblock %}
    </head>
    <body class="{% block bodyclass %}body{% endblock bodyclass %}">
        {% block header %}
            <nav class="navbar">
                <div class="container">
                    <a href="/" class="navbar-brand">Pokedex</a>
                    <span class="burger"></span>
                    <ul class="nav-items">
                        <li class="nav-item"><a href="#" class="nav-link">A propos</a></li>
                        <li class="nav-item"><a href="#" class="nav-link">Connection</a></li>
                        <li class="nav-item"><a href="#" class="nav-link">Github</a></li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
