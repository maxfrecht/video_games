{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block header %}{% endblock %}
{% block bodyclass %}log-in{% endblock %}
{% block body %}
    <div class="container" style="min-height: 100vh; display: flex; align-items: center">
        <div class="form-box">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 log-info">
                        Vous êtes connecté en tant que {{ app.user.username }}, <a class="btn"
                                                                                   style="margin-top:1rem;"
                                                                                   href="{{ path('app_logout') }}">Se
                            déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="title">Connexion</h1>
                <div class="form-group">
                    <input placeholder="Entrez votre e-mail" type="email" value="{{ last_username }}" name="email"
                           id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="inputEmail">Email</label>
                </div>
                <div class="form-group" style="margin-left: 0">
                    <input placeholder="Entrez votre Mot de passe" type="password" name="password" id="inputPassword"
                           class="form-control"
                           autocomplete="current-password"
                           required>
                    <label for="inputPassword">Mot de passe</label>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
                <a href="{{ path('app_register') }}" style="text-align: right; opacity:.5">Créer un compte</a>
            </form>
        </div>
    </div>
    {% block footer %}
        {% endblock %}
{% endblock %}
