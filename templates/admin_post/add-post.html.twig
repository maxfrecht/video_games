{% extends 'layout/admin.html.twig' %}
{% block title %}Hello AdminPostCategoryController!{% endblock %}
{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <h2 class="title">Ajouter un post</h2>
        <div class="form-group">
            {{ form_widget(form.title, {'attr': {'placeholder': 'placeholder'}}) }}
            {{ form_label(form.title, 'Titre') }}
        </div>
        <div class="form-group">
            {{ form_widget(form.content, {'attr': {'placeholder': 'placeholder'}}) }}
            {{ form_label(form.content, 'Contenu') }}
        </div>
        <div class="form-group">
            {{ form_widget(form.pathImg, {'attr': {'placeholder': 'placeholder'}}) }}
            {{ form_label(form.pathImg, "Url de l'image") }}
        </div>
        <div class="form-group">
            {{ form_widget(form.postCategory, {'attr': {'placeholder': 'placeholder'}}) }}
            {{ form_label(form.postCategory) }}
        </div>
        {{ form_row(form.submit, {
            'label': 'Ajouter',
            'attr': {'class': 'btn'}
        }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}