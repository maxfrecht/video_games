{% extends 'layout/admin.html.twig' %}
{% block title %}Ajouter une actualité{% endblock %}
{% block body %}
    <div class="container">
        <h2 class="title">Ajouter une catégorie</h2>
        {{ form_start(form) }}
        {{ form_errors(form.name) }}
        <div class="form-group">
            {{ form_widget(form.name, {
                'attr': {'placeholder' : 'placeholder'}
            }) }}
            {{ form_label(form.name, 'Nom de la nouvelle catégorie') }}
        </div>
        {{ form_row(form.submit, {
            'label': 'Ajouter',
            'attr': {'class': 'btn btn-submit'}
        }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}