{% extends '/layout/user.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container">
    <img class="abs-img" src="{{ asset('/build/images/heroes.png') }}" alt="">
    <h2 class="title">Contact</h2>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form.subject, {'attr':{'placeholder':'placeholder'}}) }}
        {{ form_label(form.subject, 'Sujet') }}
    </div>
    <div class="form-group">
        {{ form_widget(form.message, {'attr':{'placeholder':'placeholder', 'rows': '10'}}) }}
        {{ form_label(form.message, 'Votre message') }}
        <div class="errors">
            {{ form_errors(form.message) }}
        </div>
    </div>
    {{ form_row(form.submit, { 'label': 'Envoyer'}) }}
    {{ form_end(form) }}
</div>
{% endblock %}
